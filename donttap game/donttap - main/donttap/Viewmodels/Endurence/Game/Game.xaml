<Page x:Class="donttap.Viewmodels.Endurence.Game.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donttap.Viewmodels.Endurence.Game"
      mc:Ignorable="d" 
      Height="200" Width="200"
      Title="Game"
      Loaded="Page_Loaded">

    <Grid>
        <Grid Name="mainGrid">
            <ProgressBar Name="ProgressBarScore" Height="20" Value="0"/>
            <TextBlock Name="TextBlockPoints" Text="Points:" FontSize="25"/>
            <TextBlock Name="TextBlockPointsReal" Text="0" FontSize="50"/>
            <TextBlock Name="TextBlockTime" Text="Time:" FontSize="25"/>
            <TextBlock Name="TextBlockTimeReal" Text="0" FontSize="50"/>
            <TextBlock Name="TextBlockHiScore" Text="Hiscore:" FontSize="25"/>
            <TextBlock Name="TextBlockCountDown" Text="4" FontSize="50"/>


        </Grid>
    </Grid>
</Page>
