<Page x:Class="donttapNewDesign.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:donttapNewDesign.Pages"
      mc:Ignorable="d" 
      Title="MainWindow" Height="700" Width="450"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Border Name="MainBorder" CornerRadius="25" BorderThickness="0" MouseDown="MainBorder_MouseDown">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames BeginTime="0:0:0"
                                                                  Duration="0:0:5"
                                                                  Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                  RepeatBehavior="Forever"
                                                                  AutoReverse="True">

                                    <LinearColorKeyFrame KeyTime="0:0:0" Value="#D1D5DE"/>
                                    <LinearColorKeyFrame KeyTime="0:0:5" Value="#a7aab2"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>

                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames BeginTime="0:0:0"
                                                                  Duration="0:0:5"
                                                                  Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                  RepeatBehavior="Forever"
                                                                  AutoReverse="True">

                                    <LinearColorKeyFrame KeyTime="0:0:0" Value="#D1D5DE"/>
                                    <LinearColorKeyFrame KeyTime="0:0:5" Value="#a7aab2"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>

                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <!--main grid-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <Button Content="X" Background="Transparent" Width="20" Height="20"
                    VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,15,0"
                    BorderThickness="0" Click="ButtonClose_Click"/>
            <Button Content="_" Background="Transparent" Width="20" Height="20"
                    VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,40,0"
                    BorderThickness="0" Click="ButtonMinimize_Click"/>


            <!--title-->
            <Border Margin="5 30 5 -50" CornerRadius="25" BorderThickness="0 1 0 1"
                    BorderBrush="Black" Grid.Row="0">
                <Grid>
                    <TextBlock Text="Dont tap!" VerticalAlignment="Center" HorizontalAlignment="Center"
                               FontSize="45" Margin="0 0 0 10"/>
                    <TextBlock Text="Advanced" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                               Margin="5" FontSize="16"/>

                </Grid>
            </Border>

            <!--Buttons-->
            <Border Margin="5 49 5 0" CornerRadius="25" BorderThickness="0 1 0 1"
                    BorderBrush="Black" Grid.Row="1">
                <Grid>

                    <!--left button-->
                    <Button Name="ButtonPattern" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Margin="30 0 0 30" Background="Transparent" BorderBrush="Purple" BorderThickness="2"
                            Content="Pattern" FontSize="18"/>

                    <Button Name="ButtonFrenzy" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Margin="30 0 0 90" Background="Transparent" BorderBrush="Purple" BorderThickness="2"
                            Content="Frenzy" FontSize="18"/>

                    <Button Name="ButtonEndurance" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Margin="30 0 0 150" Background="Transparent" BorderBrush="Purple" BorderThickness="2"
                            Content="Endurance" FontSize="18"/>
                    <!--right buttons-->

                    <Button Name="ButtonAbout" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Margin="0 0 30 30" Background="Transparent" BorderBrush="Purple" BorderThickness="2"
                            Content="About" FontSize="18"/>

                    <Button Name="ButtonSettings" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Margin="0 0 30 90" Background="Transparent" BorderBrush="Purple" BorderThickness="2"
                            Content="Settings" FontSize="18" Click="ButtonSettings_Click"/>

                </Grid>

            </Border>
        </Grid>
    </Border>
</Page>
